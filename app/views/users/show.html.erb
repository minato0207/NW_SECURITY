
<div class="muck-up">
  <div class="overlay"></div>
  <div class="top">
    <div class="nav">
      <span class="ion-android-menu"></span>
      <p>Myプロフィール</p>
      <span class="ion-ios-more-outline"></span>
    </div>
    <div class="user-profile">
    <%# 画像をつける %>

      <img src=<%= @user.image %> class = "icon_image">

      <div class="user-details">
        <%= @user.nickname %>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="filter-btn">
    <% if @user.id == current_user.id %>
     <%= link_to "編集", edit_user_registration_path %>
    <% end %>
    
  </div>
  <div class="clearfix"></div>
  <div class="bottom">
    <div class="title">
      <h3>投稿</h3>
      <small><%= @user.created_at.strftime("%Y-%m-%d %H:%M") %>から開始</small>
    </div>
    <ul class="tasks">
      <li class="one red">
         <% @post.each do |post| %>
           <% if @user.id == post.user_id %>
              <span class="task-title"><%= post.title %></span>
              <span class="task-time"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></span>
              <span class="task-time"><%= link_to '削除', post_path(post.id), method: :delete %></span>
              <span class="task-cat"><%= post.text%></span>
              
            <% end %>
          <% end %>
       
      </li>
      <div class="title">
      
      
        <% @favorite_posts.each do |post| %>
          
          <i class="fa fa-heart"></i><% link_to  post_path(post.id)  %>
            <span class="task-time"><%= @user.created_at.strftime("%Y-%m-%d %H:%M") %></span>
          
            <span class="task-title"><%= post.user.nickname%></span>
            <span class="task-title"><%= post.title%></span>
            <span class="task-cat"><%= post.text%></span>
        <% end %>

